server {
    listen 80;
    server_name almonium.com www.almonium.com;

    # Handle ACME challenge and redirect to HTTPS
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
        allow all;
    }

    location / {
        return 301 https://$host$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name almonium.com www.almonium.com;

    ssl_certificate /etc/letsencrypt/live/almonium.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/almonium.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    root /home/kuzanoleg/almonium-fe/dist/almonium-fe/browser;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /assets {
        try_files $uri $uri/ =404;
        expires 30d;
    }

    error_page 404 /404.html;

    # Security headers
    add_header X-Content-Type-Options "nosniff";
    add_header X-Frame-Options "DENY";
    add_header X-XSS-Protection "1; mode=block";
}
